<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/widget0"
android:background="@drawable/bg_photo2"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/TextView_name"
android:layout_width="300px"
android:layout_height="30px"
android:textSize="16px"
android:text="这里是照片的名称  (9/12)"
android:textColor="#ff000000"
android:layout_x="20px"
android:layout_y="20px"
>
</TextView>
<TextView
android:id="@+id/TextView_time"
android:layout_width="260px"
android:layout_height="30px"
android:textColor="#ff000000"
android:textSize="16px"
android:text="上传于2010年10月19日/大小 225K"
android:layout_x="540px"
android:layout_y="20px"
>
</TextView>
<ImageButton
android:id="@+id/ImageBtn_next"
android:layout_width="50px"
android:layout_height="45px"
android:layout_x="730px"
android:layout_y="220px"
>
</ImageButton>
<ImageButton
android:id="@+id/ImageBtn_pre"
android:layout_width="50px"
android:layout_height="45px"
android:layout_x="20px"
android:layout_y="220px"
>
</ImageButton>
<ImageButton
android:id="@+id/ImageBtn_delete"
android:layout_width="100px"
android:layout_height="40px"
android:layout_x="10px"
android:layout_y="435px"
>
</ImageButton>
<ImageButton
android:id="@+id/ImageBtn_play"
android:layout_width="100px"
android:layout_height="40px"
android:layout_x="350px"
android:layout_y="435px"
>
</ImageButton>
<ImageButton
android:id="@+id/ImageBtn_back"
android:layout_width="100px"
android:layout_height="40px"
android:layout_x="690px"
android:layout_y="435px"
>
</ImageButton>
<ImageView android:id="@+id/ImageView_photo" android:layout_width="640px" android:layout_height="360px" android:layout_x="50dp" android:layout_y="27dp"></ImageView>
</AbsoluteLayout>
